<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdjustActivity">
    <RelativeLayout
        android:id="@+id/rltTopDetailRecord"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/btnBackMyRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?actionBarItemBackground"

            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/btnTrim"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_play_audio"/>
            <ImageView
                android:id="@+id/btnCut"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_play_audio"
                android:layout_marginHorizontal="@dimen/_15sdp"/>
            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_play_audio"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintTop_toBottomOf="@+id/rltTopDetailRecord"
        app:layout_constraintBottom_toTopOf="@+id/rltSeekbarRecord"
        android:background="@color/black">
        <com.lutech.testapp.WaveformView
            android:id="@+id/waveformView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass,MissingConstraints"
            android:background="#DFDFDF"/>
        <View
            android:id="@+id/lineSlip"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/color_pink"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltSeekbarRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/lnAdjust"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">
        <TextView
            android:id="@+id/tvTrackProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"/>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvTrackProgress"
            android:layout_toStartOf="@+id/tvTrackDuration"
            android:layout_centerVertical="true"
            android:thumbTint="@color/color_pink"
            android:progressTint="@color/color_pink"
            android:layout_marginHorizontal="@dimen/_8sdp"/>
        <TextView
            android:id="@+id/tvTrackDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="@dimen/_10ssp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lnAdjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/_40sdp"
        android:weightSum="5"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnVolumn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_speaker"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_change_speed">
                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:rotation="270"/>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/btnBackward"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:foreground="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"

            android:src="@drawable/ic_play_audio"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btnPlayRecord"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_play_audio"
            android:layout_gravity="center_vertical"
            android:foreground="?actionBarItemBackground"

            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btnForward"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_play_audio"
            android:foreground="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"

            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:text="1x"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?actionBarItemBackground"

                android:textSize="@dimen/_13ssp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_change_speed"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="0.5x"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:text="0.5x"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.5x"
                    android:textSize="@dimen/_13ssp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/default_text_color_hint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:text="0.5x"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvNameFileRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rltSeekbarRecord"
        android:layout_marginBottom="@dimen/_40sdp"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/seekBarVo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:rotation="-90"
        android:thumbTint="@color/color_pink"
        android:progressTint="@color/color_pink"/>
</androidx.constraintlayout.widget.ConstraintLayout>