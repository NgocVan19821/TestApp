<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@color/color_pink" />

    <!-- Arrow -->
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp">
        <rotate android:fromDegrees="180">
            <shape android:shape="rectangle">
                <size
                    android:width="40dp"
                    android:height="40dp" />
                <solid android:color="@color/color_pink" />
                <corners android:radius="2dp" />
                <padding
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp"
                    android:bottom="0dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
